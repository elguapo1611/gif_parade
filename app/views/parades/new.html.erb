<section class="section-wrapper" ng-controller="GifCtrl">
  <div id="player"></div>

  <div id="wrapper" class="">
    <div id="gif" ng-cloak style="background-image: url({{currentSlide.url}})"></div>
    <div id="chyron">
      <h1 ng-cloak ng-bind="currentSlide.text"></h1>
    </div>
    <div id="title">
      <img src="/gifparade-logo.svg" width="216">
    </div>
    <div id="controls">
      <div ng-controller="YoutubeCtrl">
        <p id="toggle-audio" class="audio-on" data-playing="true">
          <a ng-click="youtube_toggle()" href="#">turn audio OFF</a>
        </p>
      </div>
      <p id="get-short-url">
        <a href="#" id="get_url">get short URL</a>
      </p>
      <p id="copy-short-url" style="display:none;">
        <span id="copy_this"></span>
        <a href="#" id="copy_url" data-clipboard-target="copy_this" class="pre-copy">COPY</a>
      </p>
    </div>
  </div>

  <div class="belowfold" id="belowfold">
    <%= render :partial => "form" %>
  </div>
</section>